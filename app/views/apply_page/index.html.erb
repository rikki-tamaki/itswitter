<h1>店の新規申請</h1>
<%= form_for @apply, url:apply_page_new_path do |f| %>
  <div>
    <%= f.label :店名 %>
    <%= f.text_field :apply_restaurant %>
  </div>
  <div>
    <%= f.label :フリースペース %>
    <%= f.text_area :free, cols:80, rows:10 %>
  </div>
  <div>
    <%= f.submit "登録" %>
  </div>
<% end %>

<h1>申請中リスト</h1>
<% @applies.each do |apply| %>
  <h2><%= apply.apply_restaurant %>　<%= apply.free %></h2>
<% end %>
