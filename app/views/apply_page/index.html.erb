<link href="/css/main.css" rel="stylesheet" />
<h1>店の新規申請</h1>

<% if @apply.errors.any? %>
  <ul>
    <h2><%= @apply.errors.messages[:apply_restaurant][0] %></h2>
  </ul>
<% end %>

<%= form_for @apply, url:apply_page_new_path do |f| %>

  <div>
    <%= f.label :店名 %>
    <%= f.text_field :apply_restaurant %>
  </div>
  <div>
    <%= f.label :フリースペース %>
    <%= f.text_area :free, cols:80, rows:10 %>
  </div>
  <div>
    <%= f.submit "登録" %>
  </div>
<% end %>
<br>
<div style="border-style: solid ; border-width: 1px; padding: 8px 5px 8px 5px; border-color: white;">
  <center><h1>申請記録</h1></center> 
</div>
<% num = 1 %>
<% @applies.each do |apply| %>
  <h2> <%= num %> . <u><%= apply.apply_restaurant %></u> <%= apply.free %></h2>
  <% num = num + 1 %>
<% end %>
