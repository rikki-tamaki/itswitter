<%= render '/input_msg', object: @feedback %>
<div class="jumbotron">
<h3>Suitellへのご意見・ご要望をお聞かせください。</h3>
</div>
<% if flash[:notice] %>
<div class="alert alert-success">
  <%= flash[:notice] %>
</div>
<% end %>
<% if flash[:alert] %>
<div class="alert alert-denger">
  <%= flash[:alert] %>
</div>
<% end %>

<%= form_for @feedback do |f| %>
<div>
  <%= f.label :名前 %>
  <% @feedback.name = "匿名" %>
  <%= f.text_field :name ,class:'form-control'%>
</div>
<br>
<div class="form-group">
<p><%= f.label :ご意見 %></p>

  <%= f.text_area :opinion, rows:10, class:'form-control' %>
  <br>
  <%= f.submit "送信",{class: 'btn btn-primary'} %>
</div>
<% end %>
