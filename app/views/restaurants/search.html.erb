  <div class="jumbotron">
    <center><h1>Suitell</h1>
      <p>飯、待てぬ、食わねば。</p>
      <%= form_tag(restaurants_search_path) do |f| %>
        <div class="input-group">
          <%= text_field_tag :name,"" ,class: 'form-control', placeholder: '飲食店を検索しよう！' %>
          <span class="input-group-btn">
            <%= button_tag '検索', class: 'btn btn-default' %>
          </span>
        </div>
      <% end %>
    </center>
  </div>

  <center><p><%= @error %></p></center>
  
  <center><h1>検索一覧</h1></center>
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="col-md-4">店名</th>
        <th class="col-md-4">混雑度</th>
        <th class="col-md-4">最新更新時</th>
      </tr>
    </thead>
    <tbody>
      <% @searched.each do |ranking| %>
        <tr>
          <td class="col-md-4"><%= link_to ranking.name, "https://www.google.co.jp/search?q=" + ranking.name %></td>
          <td class="col-md-4"><%= image_tag(@crowded_image[ranking.crowdedness], :size => "32x32") %><%= link_to @how_crowded[ranking.crowdedness], :action => "report", :resname => ranking.name %></td>
          <td class="col-md-4"><%= sec2h((Time.zone.now - ranking.updated_at).to_i) %>前</td>
        </tr>
      <% end %>
    </tbody>
  </table>

