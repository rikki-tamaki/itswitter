<link href="/css/main.css" rel="stylesheet" />
<div class="main">
  <meta neme="refresh" content="10">
  <%= form_tag(restaurants_search_path) do %>
    店名:<%= text_field_tag :name %>
    <%= submit_tag '検索' %>
  <% end %>
  <h2><%= @error %></h2>
  
  <div style="border-style: solid ; border-width: 1px; padding: 8px 5px 8px 5px; border-color: white;">
    <center><h1>検索一覧</h1></center>
  </div>

  <center>
    <table>
      <div class="container">
	<div class="row">
	  <tr>
            <td class="col-sm-3"><h1>店名</h1></td>
            <td class="col-sm-3"><h1>混雑度</h1></td>
            <td class="col-sm-6"><h1>最新更新時</h1></td>
	  </tr>
	</div>
      </div>

      <div class="container">
	<div class="row">
	  <% @searched.each do |ranking| %>
          <tr>
            <td class="col-sm-3"><h1><%= ranking.name %></h1></td>
            <td class="col-sm-3"><h1><%= ranking.seats_occ %>％</h1></td>
            <td class="col-sm-6"><h1><%= sec2h((Time.zone.now - ranking.updated_at).to_i) %>前</h1></td>
          </tr>
	  <% end %>
	</div>
      </div>
    </table>
  </center>
  <br>
</div>
